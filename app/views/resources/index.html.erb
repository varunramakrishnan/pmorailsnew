<h1>Listing Resources</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Employee name</th>
      <th>Role</th>
      <th>Heirarchy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.employee_id %></td>
        <td><%= resource.employee_name %></td>
        <td><%= resource.role %></td>
        <td><%= resource.heirarchy_id %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

